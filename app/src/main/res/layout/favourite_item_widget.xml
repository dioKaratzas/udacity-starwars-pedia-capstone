<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/widget_favourite_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_item_image_height"
        android:contentDescription="@string/image_thumbnail"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_image_placeholder" />

    <TextView
        android:id="@+id/widget_favourite_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/widget_favourite_image"
        android:layout_gravity="bottom|center"
        android:maxLines="2"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_large" />
</RelativeLayout>